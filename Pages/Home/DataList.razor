<MRow Class="ma-auto hover-pointer">
    <MCol OffsetSm="0">
        @foreach (var item in _items)
        {
            <MCard Class="mb-4" Link Href="@("/DataDetail/" + @item.Id)" Flat>
                <MCardTitle Class="mb-1">
                    <MAvatar>
                        <MImage Src="@item.Avatar"></MImage>
                    </MAvatar>
                    <span class="mr-4"> </span>
                    @item.Title
                </MCardTitle>
                <MCardSubtitle><div class="font-weight-bold">@item?.SubTtile 
                    <span class="float-right ml-4 num-hover">
                        <i class="iconfont icon-shoucang"></i> 12345
                    </span>
                    <span class="float-right num-hover">
                         <i class="iconfont icon-yueduxiao"></i> 44435
                    </span>
                    </div></MCardSubtitle>
            </MCard>
        }
    </MCol>
</MRow>